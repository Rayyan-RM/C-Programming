#include <stdio.h>
#include <stdbool.h>

int main() {
    
    int number;
    printf("Enter the Number :"); 
    scanf("%d",&number); //asking number from the user which number's multiple table needed
    
    int count=1;
    int end ; 
    printf("Enter the number how long you need the multiple table for above number :");
    scanf("%d",&end); // asking number to decide the how long that multiple table needed
    
    while (count<=end) {
        printf("%d * %d = ",number,count);
        int results = number*count; //Multipication
        printf("%d\n",results); 
        count=++count;
         
    }
    return 0;
}
